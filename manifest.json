{
  "manifest_version": 3,
  "name": "GitHub AI Context Builder",
  "version": "25.06.16.0939",
  "description": "Select files from a GitHub repository page and copy their content formatted for AI context.",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "notifications"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "service_worker": "dist/background_bundle.js",
    "type": "module"
  },
  "options_page": "options/options.html",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Build GitHub Context"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
